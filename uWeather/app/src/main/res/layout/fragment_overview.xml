<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/city"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/white">
    </TextView>
    <ImageView
        android:id="@+id/smhilogo"
        android:foreground="@mipmap/smhi_logo_foreground"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="240dp"
        android:background="@color/white">
    </ImageView>
    <TextView
        android:id="@+id/smhitemp"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="250dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold">
    </TextView>
    <ImageView
        android:id="@+id/yrlogo"
        android:foreground="@mipmap/yr_logo_foreground"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="340dp"
        android:background="@color/white">
    </ImageView>
    <TextView
        android:id="@+id/yrtemp"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="250dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/mocktext"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="440dp"
        android:background="@color/white"
        android:text="@string/mock"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/mocktemp"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="250dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold">
    </TextView>

</FrameLayout>